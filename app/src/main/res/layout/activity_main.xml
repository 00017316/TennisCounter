<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.alvarenga.basketballcounter.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Score1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score_text"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/ScoreQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score_quantity"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/Score1"
                android:textSize="48sp"/>



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/Button1"
                android:layout_below="@+id/ScoreQ"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="18dp"
                android:text="@string/point_plus"/>

        </RelativeLayout>
        <RelativeLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <View
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:background="#000"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <TextView
                android:id="@+id/Score11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score_text"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/ScoreQT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score_quantity"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/Score11"
                android:textSize="48sp"/>

           <!-- <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Button03"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:id="@+id/button0004"
                android:text="@string/point4_adv"/>
